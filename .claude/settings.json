{
  "defaultMode": "bypassPermissions",
  "permissions": {
    "allow": ["*"]
  },
  "extraKnownMarketplaces": [
    {
      "type": "directory",
      "path": "./.claude-plugin",
      "description": "Local ZTL plugin marketplace with 8 business groups"
    }
  ],
  "enabledPlugins": {
    "strategy-team@ztl-local-plugins": true,
    "creative-team@ztl-local-plugins": true,
    "intelligence-team@ztl-local-plugins": true,
    "construction-team@ztl-local-plugins": true,
    "development-team@ztl-local-plugins": true,
    "meituan-ops-team@ztl-local-plugins": true,
    "supply-chain-team@ztl-local-plugins": true,
    "admin-team@ztl-local-plugins": true
  },
  "hooks": {
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/parallel-claude-after-compact.sh",
            "description": "Launch parallel Claude instance with compact context for continued task execution"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/post-tool-use-logger.sh",
            "description": "Log file creation and modification to changes.log"
          }
        ]
      }
    ]
  }
}
