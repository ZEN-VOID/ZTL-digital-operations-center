{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ztl-ai.com/schemas/batch-replace-task-config.json",
  "title": "批量替换任务配置",
  "description": "Next.js页面图片批量替换与截图的任务配置文件JSON Schema",
  "type": "object",
  "required": ["task_name", "task_id", "page_config", "input_files"],
  "properties": {
    "task_name": {
      "type": "string",
      "description": "任务名称",
      "minLength": 1
    },
    "task_id": {
      "type": "string",
      "description": "唯一任务ID",
      "pattern": "^batch_replace_[a-z0-9_-]+_\\d{8}_\\d{6}$"
    },
    "created_at": {
      "type": "string",
      "description": "任务创建时间(ISO 8601)",
      "format": "date-time"
    },
    "page_config": {
      "type": "object",
      "description": "页面配置",
      "required": ["page_path", "page_url"],
      "properties": {
        "page_path": {
          "type": "string",
          "description": "页面路径(如: chengdu-tour)",
          "minLength": 1
        },
        "page_url": {
          "type": "string",
          "description": "完整页面URL",
          "format": "uri"
        },
        "css_selector": {
          "type": "string",
          "description": "通用CSS选择器(兼容模式)"
        },
        "page_width": {
          "type": "integer",
          "description": "页面宽度(px)",
          "minimum": 320,
          "maximum": 7680
        },
        "page_height": {
          "type": "integer",
          "description": "页面高度(px)",
          "minimum": 240,
          "maximum": 4320
        },
        "replace_mapping": {
          "type": "array",
          "description": "精确节点映射配置(推荐)",
          "items": {
            "type": "object",
            "required": ["json_key", "css_selector"],
            "properties": {
              "json_key": {
                "type": "string",
                "description": "JSON文件中的key名",
                "minLength": 1
              },
              "css_selector": {
                "type": "string",
                "description": "精确的CSS选择器",
                "minLength": 1
              },
              "description": {
                "type": "string",
                "description": "节点说明"
              }
            }
          },
          "minItems": 1
        }
      },
      "oneOf": [
        {"required": ["css_selector"]},
        {"required": ["replace_mapping"]}
      ]
    },
    "input_files": {
      "type": "array",
      "description": "输入文件列表",
      "items": {
        "type": "object",
        "required": ["json_file", "output_name"],
        "properties": {
          "json_file": {
            "type": "string",
            "description": "JSON文件路径",
            "minLength": 1
          },
          "output_name": {
            "type": "string",
            "description": "输出文件名(不含扩展名)",
            "minLength": 1
          }
        }
      },
      "minItems": 1
    },
    "output_config": {
      "type": "object",
      "description": "输出配置",
      "properties": {
        "output_dir": {
          "type": "string",
          "description": "输出目录",
          "default": "output/model"
        },
        "screenshot_format": {
          "type": "string",
          "description": "截图格式",
          "enum": ["png", "jpg", "jpeg", "webp"],
          "default": "png"
        },
        "auto_dimensions": {
          "type": "boolean",
          "description": "自动从CSS获取页面尺寸",
          "default": true
        },
        "clip_to_viewport": {
          "type": "boolean",
          "description": "精确裁切到视口",
          "default": true
        }
      }
    },
    "execution_config": {
      "type": "object",
      "description": "执行配置",
      "properties": {
        "headless": {
          "type": "boolean",
          "description": "无头模式",
          "default": true
        },
        "wait_after_replace": {
          "type": "integer",
          "description": "替换后等待时间(秒)",
          "minimum": 0,
          "maximum": 60,
          "default": 3
        },
        "timeout": {
          "type": "integer",
          "description": "超时时间(毫秒)",
          "minimum": 5000,
          "maximum": 300000,
          "default": 60000
        }
      }
    }
  }
}
